<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoldTheDishes.Views.ReminderDetailPage"
             Title="{Binding Title}"
             Visual="Material">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Text, Mode=TwoWay}" FontSize="Small"/>
        <Label Text="{Binding Id}" FontSize="Small" IsEnabled="false"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description, Mode=TwoWay}" FontSize="Small"/>
        <Label Text="Date:" FontSize="Medium" />
        <DatePicker Date="{Binding DueDate, Mode=TwoWay}" FontSize="Small"/>
        <Label Text="Time:" FontSize="Medium" />
        <TimePicker Time="{Binding DueTime, Mode=TwoWay}" FontSize="Small"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Delete" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>